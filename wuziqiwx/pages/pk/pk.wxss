/* pages/pk/pk.wxss */
/*全局用page*/
page{
  height:100%;
  font-family:  'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}


.qipan{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

}
.btn-lgr{
  overflow: auto;
  width: 300rpx;
  margin: auto;
}
.btn-lgr>button{
  width: 100rpx;
  height: 100rpx;
  float: left;
}
.up{
  width: 100rpx;
  height: 100rpx;
}
.down{
  width: 100rpx;
  height: 100rpx;
}
.show{
  width: 100rpx;
  height: 100rpx;
  border-radius: 3px;
  float: right;
  z-index: 100
}
.show>image{
  max-width: 100%;
  max-height: 100%;
}
.friendlist{
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
  width: 200rpx;
  overflow: auto;
  background-color: whitesmoke;
  
}
.online{
  width: 200rpx;
  height: 70rpx;
  padding-left: 5rpx;
  padding-top: 10rpx;
  border-bottom:7rpx solid gainsboro; 

}
.offline{
  width: 200rpx;
  height: 70rpx;
  padding-left: 5rpx;  
  padding-top: 10rpx;
  border-bottom:7rpx solid gainsboro; 

}
.onlineimg{
  height:50rpx;
  width: 50rpx;
  float: right;
  margin-right: 10rpx;
}